<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SpinnerFigurasGeometricas">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna inicial: "
        android:id="@+id/textViewColIni"
        android:layout_below="@+id/textViewRadio"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fila inicial: "
        android:id="@+id/textViewFilIni"
        android:layout_below="@+id/textViewColIni"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etColIni"
        android:layout_alignBottom="@+id/textViewColIni"
        android:layout_toRightOf="@+id/textViewColIni" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etFilIni"
        android:layout_alignBottom="@+id/textViewFilIni"
        android:layout_toRightOf="@+id/textViewColIni" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Columna final: "
        android:id="@+id/textViewColFin"
        android:layout_below="@+id/textViewFilIni"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etColFin"
        android:layout_toEndOf="@+id/textViewFilIni"
        android:layout_alignBottom="@+id/textViewColFin"
        android:layout_alignStart="@+id/etFilFin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fila final: "
        android:id="@+id/textViewFilFin"
        android:layout_below="@+id/textViewColFin"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etFilFin"
        android:layout_alignBottom="@+id/textViewFilFin"
        android:layout_alignEnd="@+id/etFilIni" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Radio"
        android:id="@+id/textViewRadio"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etRadio"
        android:layout_alignBottom="@+id/textViewRadio"
        android:layout_alignEnd="@+id/etFilIni" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dibujar"
        android:id="@+id/buttonDibujar"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/etFilFin"
        android:layout_alignStart="@+id/etFilFin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Spinner de figuras geometricas"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
